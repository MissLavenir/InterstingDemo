<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".fragment.CropPictureFragment">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selectPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/choose_picture"
            android:paddingVertical="10dp"
            android:background="@drawable/bg_round_rectangle_stroke_blue"
            android:layout_marginHorizontal="20dp"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/getPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deletePicture"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_dialog_close"
            android:tint="@color/red_400"
            android:padding="4dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selectVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/choose_video"
            android:paddingVertical="10dp"
            android:background="@drawable/bg_round_rectangle_stroke_blue"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/videoLayout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/getVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginBottom="24dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <LinearLayout
                    android:id="@+id/speedLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed3_0"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_3_0"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed2_5"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_2_5"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed2_0"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_2_0"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed1_5"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_1_5"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed1_25"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_1_25"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed1_0"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_1_0"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed0_75"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_0_75"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed0_5"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_0_5"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/speed0_2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_speed_0_2"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey_600"
                        />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/speedCurrent"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_speed_1_0"
                    android:textSize="16sp"
                    android:textColor="@color/grey_300"
                    android:padding="4dp"
                    android:visibility="visible"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>